{
    "manifest_version": 3,
    "name": "视频下载助手",
    "version": "1.1.0",
    "description": "一键下载各大视频网站的视频",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}